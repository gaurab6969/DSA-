//Binary Search
#include<stdio.h>
int main(){
	int i, low, high, mid, n, item, arr[100];
	printf("Enter number of elements:\n");
	scanf("%d",&n);
	printf("Enter %d integers:\n",n);
	for(i=0;i<n;i++){
		scanf("%d",&arr[i]);
	}
	printf("Enter value to find:\n");
	scanf("%d",&item);
	
	low=0;
	high=(n-1);
	mid=(low+high)/2;
	
	while(low<=high){
		if(arr[mid]<item){
			low = mid+1;
		}
		else if(arr[mid]=item){
			printf("%d found at location:%d\n",item, mid+1);
			break;
		}
		else
		high = mid-1;
		mid = (low+high)/2;
	}
	if(low>high){
		printf("Not found! %d isn't present in the list.\n",item);
	}
	return 0;
}
