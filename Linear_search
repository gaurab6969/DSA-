//Linear search in C
#include<stdio.h>
int main(){
	int a[100], item, i, n;
	printf("enter no. of elements in array:\n");
	scanf("%d",&n);
	printf("enter %d number \n",n);
	for(i=0;i<n;i++){
		scanf("%d",&a[i]);
	}
	printf("enter a number to search\n");
	scanf("%d",&item);
	
	for(i=0;i<n;i++){
		if(a[i] == item){
		printf("%d is present at location %d\n", item,i+1);
		break;
	   }
    }
	if(i == n){
		printf("%d is not present in the array.\n",item);
}
return 0;
}
